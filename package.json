{
	"name": "personal-web",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev --host",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "biome lint .",
		"format": "bun run format:code && bun run format:imports",
		"format:code": "biome format . --write && prettier -w \"**/*\" \"!**/*.{md,mdx}\" --ignore-unknown --cache",
		"format:imports": "biome check --formatter-enabled=false --write",
		"check": "astro check",
		"img:webp": "node scripts/img-to-webp.js"
	},
	"dependencies": {
		"@astrojs/markdown-remark": "6.3.6",
		"@astrojs/mdx": "4.3.4",
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "3.5.1",
		"@tailwindcss/vite": "^4.1.11",
		"astro": "5.13.4",
		"astro-expressive-code": "^0.41.3",
		"astro-icon": "^1.1.5",
		"astro-mermaid": "^1.0.4",
		"astro-plantuml": "^0.1.4",
		"mermaid": "^11.9.0",
		"nprogress": "^0.2.0",
		"playwright": "^1.54.1",
		"rehype-external-links": "^3.0.0",
		"rehype-mermaid": "^3.0.0",
		"remark-directive": "^4.0.0",
		"remark-gfm": "^4.0.1",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@iconify-json/carbon": "^1.2.10",
		"@iconify-json/logos": "^1.2.4",
		"@iconify-json/ri": "^1.2.5",
		"@iconify/json": "^2.2.359",
		"@iconify/tailwind4": "^1.0.6",
		"@tailwindcss/typography": "^0.5.16",
		"@types/nprogress": "^0.2.3",
		"prettier": "^3.6.2",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"sharp": "^0.34.3"
	}
}

{
	"name": "personal-web",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev --host",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "biome lint .",
		"format": "bun run format:code && bun run format:imports",
		"format:code": "biome format . --write && prettier -w \"**/*\" \"!**/*.{md,mdx}\" --ignore-unknown --cache",
		"format:imports": "biome check --formatter-enabled=false --write",
		"check": "astro check",
		"img:webp": "node scripts/img-to-webp.js"
	},
	"dependencies": {
		"@astrojs/check": "^0.9.6",
		"@astrojs/markdown-remark": "6.3.10",
		"@astrojs/mdx": "4.3.13",
		"@astrojs/rss": "4.0.15",
		"@astrojs/sitemap": "3.7.0",
		"@fontsource-variable/geist-mono": "^5.2.7",
		"@fontsource-variable/lora": "^5.2.8",
		"@fontsource/ia-writer-quattro": "^5.2.5",
		"@tailwindcss/vite": "^4.1.18",
		"astro": "5.17.2",
		"astro-expressive-code": "^0.41.5",
		"astro-icon": "^1.1.5",
		"astro-mermaid": "^1.2.0",
		"mermaid": "^11.12.2",
		"nprogress": "^0.2.0",
		"playwright": "^1.57.0",
		"rehype-external-links": "^3.0.0",
		"rehype-mermaid": "^3.0.0",
		"remark-directive": "^4.0.0",
		"remark-gfm": "^4.0.1",
		"satori-astro": "^0.3.3",
		"satori-html": "^0.3.2",
		"tailwind-merge": "^3.4.0",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@iconify-json/carbon": "^1.2.15",
		"@iconify-json/logos": "^1.2.10",
		"@iconify-json/ri": "^1.2.7",
		"@iconify/json": "^2.2.423",
		"@iconify/tailwind4": "^1.2.0",
		"@tailwindcss/typography": "^0.5.19",
		"@types/nprogress": "^0.2.3",
		"lefthook": "^2.0.13",
		"prettier": "^3.7.4",
		"prettier-plugin-astro": "^0.14.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"sharp": "^0.34.5"
	}
}

---
import ProjectCard from "@/components/projects/ProjectCard.astro";
import PageLayout from "@/layouts/BaseLayout.astro";
import { projectData } from "@/lib/constants/projects";
---

<PageLayout
	title="Projects"
	description="Explore my projects that showcase my skills and creativity in various domains."
	pageType="website"
>
	<div class="flex w-full flex-col gap-y-10">
		<div>
			<h1 class="mb-2 text-2xl font-semibold">Projects</h1>
			<p class="text-muted-foreground">
				A collection of projects I've worked on, from web applications to experiments.
			</p>
		</div>

		{
			projectData.map((category) => (
				<section class="flex flex-col gap-y-4">
					<h2 class="text-muted-foreground text-sm font-medium tracking-wider uppercase">
						{category.title}
					</h2>
					<div class="flex flex-col">
						{category.projects.map((project) => (
							<ProjectCard
								href={project.href}
								heading={project.text}
								subheading={project.description}
								class="w-full"
							/>
						))}
					</div>
				</section>
			))
		}
	</div>
</PageLayout>

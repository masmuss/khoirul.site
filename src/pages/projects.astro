---
import PageLayout from "@/layouts/BaseLayout.astro";
import { projectData } from "@/lib/constants/projects";
---

<PageLayout
	title="Projects"
	description="Explore my projects that showcase my skills and creativity in various domains."
	pageType="website"
>
	<div class="flex w-full flex-col gap-y-10">
		<div>
			<h1 class="mb-2 text-2xl font-semibold">Projects</h1>
			<p class="text-muted-foreground">
				A collection of projects I've worked on, from web applications to experiments.
			</p>
		</div>

		{
			projectData.map((category) => (
				<section class="flex flex-col gap-y-4">
					<h2 class="text-muted-foreground text-sm font-medium tracking-wider uppercase">
						{category.title}
					</h2>
					<div class="flex flex-col">
						{category.projects.map((project) => (
							<a
								href={project.href}
								target="_blank"
								rel="noopener noreferrer"
								class="group hover:bg-muted/30 -mx-3 flex flex-col gap-y-1 rounded-lg px-3 py-3 transition-colors"
							>
								<div class="flex items-center gap-2">
									<span class="font-medium">{project.text}</span>
									<span class="iconify text-muted-foreground ri--external-link-line text-sm opacity-0 transition-opacity group-hover:opacity-100" />
								</div>
								{project.description && (
									<p class="text-muted-foreground text-sm">{project.description}</p>
								)}
							</a>
						))}
					</div>
				</section>
			))
		}
	</div>
</PageLayout>

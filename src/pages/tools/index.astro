---
import Button from "@/components/Button.astro";
import ToolSection from "@/components/ToolSection.astro";
import PageLayout from "@/layouts/BaseLayout.astro";

import TOOLS from "@/lib/constants/tools";
---

<PageLayout
	title="Tools"
	description="Explore the tools and software I use daily to enhance my productivity and creativity."
	pageType="website"
>
	<div class="w-full">
		<Button title="Back" href="/" style="button">
			<span class="iconify ri--arrow-left-long-line" slot="icon-before"></span>
		</Button>

		<div class="mt-5 flex w-full flex-col gap-y-10">
			<div>
				<h1 class="mb-1 text-2xl font-bold">Tools</h1>
				<p>Tools and software I use daily</p>
			</div>

			{TOOLS.map((tool) => <ToolSection title={tool.title} tools={tool.tools} />)}
		</div>
	</div>
</PageLayout>

---
import { ClientRouter, fade } from "astro:transitions";
import BaseHead from "@/components/layout/BaseHead.astro";
import Footer from "@/components/layout/Footer.astro";
import Header from "@/components/layout/Header.astro";
import ThemeProvider from "@/components/ThemeProvider.astro";

const { ...head } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead {...head} />
		<ClientRouter />
	</head>
	<body class="bg-background flex justify-center antialiased transition-all">
		<ThemeProvider />

		<div
			class="pointer-events-none fixed inset-0 bg-[url('/noise.svg')] opacity-15 invert dark:invert-0"
			aria-hidden="true"
		>
		</div>

		<main
			class="relative z-10 mx-auto flex min-h-screen w-screen max-w-2xl flex-col items-center px-5 leading-relaxed md:max-w-4xl lg:px-0"
			transition:animate={fade({ duration: 300 })}
		>
			<Header />
			<div class="w-full flex-1">
				<slot />
			</div>
			<Footer />
		</main>
	</body>
</html>

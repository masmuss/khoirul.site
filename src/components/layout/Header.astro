---
import { Image } from "astro:assets";
import logoDark from "@/assets/images/logo-dark.svg";
import logoLight from "@/assets/images/logo-light.svg";
import ThemeToggle from "../ThemeToggle.astro";
---

<header class="mb-12 flex w-full flex-wrap py-8 text-sm sm:flex-nowrap sm:justify-start md:py-12">
	<nav
		class="relative mx-auto flex w-full items-center justify-between sm:flex sm:items-center"
		aria-label="global"
	>
		<a
			class="hidden flex-none font-serif text-lg font-bold md:block md:text-2xl"
			href="/"
			aria-label="Brand">pictogrammer<span class="text-teal-500">.</span></a
		>
		<a class="block flex-none font-serif md:hidden" href="/" aria-label="Brand">
			<Image src={logoLight} alt="Logo" class="w-14 dark:hidden" />
			<Image src={logoDark} alt="Logo" class="hidden w-14 dark:block" />
		</a>

		<div class="hidden flex-row items-center justify-center gap-x-5 md:flex">
			<a
				href="/blog"
				class="hover:text-foreground/75 flex-none text-[1.05rem] font-medium"
				aria-label="Nav Menu Item"
				>Blog
			</a>
			<a
				href="/projects"
				class="hover:text-foreground/75 flex-none text-[1.05rem] font-medium"
				aria-label="Nav Menu Item"
				>Projects
			</a>
			<a
				href="/tools"
				class="hover:text-foreground/75 flex-none text-[1.05rem] font-medium"
				aria-label="Nav Menu Item"
				>Tools
			</a>

			<ThemeToggle />
		</div>

		<div class="flex flex-row items-center justify-center gap-x-4 md:hidden">
			<a href="/blog" class="hover:text-foreground/75 flex items-center" aria-label="Nav Menu Item">
				<span class="iconify ri--article-line"></span>
			</a>
			<a
				href="/projects"
				class="hover:text-foreground/75 flex items-center"
				aria-label="Nav Menu Item"
			>
				<span class="iconify ri--code-line"></span>
			</a>
			<a
				href="/tools"
				class="hover:text-foreground/75 flex items-center"
				aria-label="Nav Menu Item"
			>
				<span class="iconify ri--tools-line"></span>
			</a>

			<ThemeToggle />
		</div>
	</nav>
</header>

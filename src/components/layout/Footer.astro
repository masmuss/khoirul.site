---
import SocialLinks from "@/components/SocialLinks.astro";
import siteConfig from "@/config/site-config";
---

<footer class="mt-18 flex w-full flex-col gap-4 pt-6 pb-14 text-sm">
	<div class="border-seashell-400 border-t pt-5">
		<div
			class="flex flex-col items-center gap-y-3 sm:flex sm:flex-row sm:items-center sm:justify-between sm:gap-y-0"
		>
			<div class="flex gap-x-4 text-sm">
				<span class="opacity-65"
					>2018&nbsp;&mdash;&nbsp;{new Date().getFullYear()}&nbsp;&copy;&nbsp;{
						siteConfig.author
					}.</span
				>
			</div>

			<SocialLinks />
		</div>
	</div>
</footer>

---
import siteConfig from "@/config/site-config";
---

<footer class="mt-18 flex w-full flex-col gap-4 pt-6 pb-8 text-sm">
	<div class="border-seashell-400 border-t pt-5">
		<div
			class="flex flex-col items-center gap-y-3 sm:flex sm:flex-row sm:items-center sm:justify-between sm:gap-y-0"
		>
			<div class="flex gap-x-4 text-sm">
				<span class="opacity-65"
					>2018&nbsp;&mdash;&nbsp;Present&nbsp;&copy;&nbsp;{siteConfig.author}.</span
				>
			</div>

			<div class="flex items-center justify-between">
				<div class="flex items-center gap-x-4">
					{
						siteConfig.socialLinks.map((link) => (
							<a
								class="text-muted-foreground/65 hover:text-muted-foreground inline-block transition-all"
								href={link.href}
								target="_blank"
								rel="noopener noreferrer"
							>
								<span class={`iconify ${link.icon} text-lg`} slot="icon-before" />
							</a>
						))
					}
				</div>
			</div>
		</div>
	</div>
</footer>

---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { cn } from "@/lib/utils";

interface Props {
	as?: keyof HTMLElementTagNameMap;
	className?: string;
	href?: string;
	heading: string;
	subheading?: string;
	date?: string;
	imagePath?: string;
	altText?: string;
	imageClass?: string;
}

const {
	as: Tag = "div",
	className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText = "",
	imageClass,
}: Props = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
	"/src/assets/images/*.{jpeg,jpg,png,gif}",
);

if (imagePath && !images[imagePath]) {
	throw new Error(
		`"${imagePath}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`,
	);
}
---

<Tag
	class={cn(
		className,
		"group py-2",
		href && "hover:bg-muted/30 -mx-3 px-3 rounded-lg border-b-0 transition-colors",
	)}
	href={href}
>
	{
		imagePath && (
			<Image
				src={images[imagePath]()}
				alt={altText}
				class={cn("mb-3", imageClass)}
				loading="eager"
			/>
		)
	}
	<div class="flex flex-col gap-y-1">
		<div
			class="flex w-full flex-col items-start justify-between gap-y-1 sm:flex-row sm:items-center"
		>
			<div class="flex flex-col gap-y-0.5">
				<strong class="font-medium">{heading}</strong>
				{subheading && <span class="text-muted-foreground text-sm">{subheading}</span>}
			</div>
			{date && <span class="text-muted-foreground text-sm">{date}</span>}
		</div>
		<div class="text-muted-foreground text-sm">
			<slot />
		</div>
	</div>
</Tag>

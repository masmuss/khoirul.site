---
import { cn } from "@/lib/utils";

interface Props {
	class?: string;
	as?: keyof HTMLElementTagNameMap;
	title: string;
	href?: string;
	target?: string;
	[key: string]: unknown;
}

const {
	class: className,
	as: Tag = "div",
	title,
	href,
	target = "_blank",
	...props
}: Props = Astro.props;
---

<Tag
	class={cn(
		className,
		"flex flex-row items-center justify-center gap-2",
		href && "hover:opacity-75 transition-all",
	)}
	href={href}
	target={target}
	{...props}
>
	<slot name="icon" />
	<p>{title}</p>
</Tag>

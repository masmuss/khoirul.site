---
import { cn } from "@/lib/utils";

interface Props {
	as?: keyof HTMLElementTagNameMap;
	class?: string;
	title: string;
	href?: string;
	style?: "button" | "pill";
}

const { as: Tag = "a", class: className, title, href, style = "button" }: Props = Astro.props;
---

<Tag
	class={cn(
		className,
		"inline-flex items-center gap-x-1 rounded-lg bg-primary-foreground border border-border px-2 py-1 text-sm transition-all hover:invert",
		!href && "cursor-default",
		style === "pill" && "rounded-xl",
	)}
	href={href}
	data-astro-prefetch
>
	<slot name="icon-before" />
	<p>{title}</p>
	<slot name="icon-after" />
</Tag>

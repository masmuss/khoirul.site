---
import siteConfig from "@/config/site-config";
---

<section class="flex flex-col gap-y-4">
	<h1 class="text-2xl font-semibold">Khoirul Fattah</h1>
	<p class="text-muted-foreground max-w-md leading-relaxed">
		Full-stack developer & photographer based in Surabaya. Building web experiences and capturing
		moments through a lens.
	</p>
	<div class="flex items-center gap-4">
		{
			siteConfig.socialLinks.map((link) => (
				<a
					href={link.href}
					target="_blank"
					rel="noopener noreferrer"
					class="text-muted-foreground hover:text-foreground transition-colors"
					aria-label={link.text}
				>
					<span class={`iconify text-xl ${link.icon}`} />
				</a>
			))
		}
	</div>
</section>

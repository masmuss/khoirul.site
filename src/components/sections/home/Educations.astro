---
import Card from "@/components/Card.astro";
import Section from "@/components/Section.astro";
import type { Education } from "@/types";

interface Props {
	educations: Education[];
}

const { educations }: Props = Astro.props;
---

<Section title="Education">
	<div class="flex flex-col gap-y-6">
		{
			educations.map((edu) => (
				<div class="flex flex-col gap-y-1">
					<div class="flex flex-col gap-y-0.5 sm:flex-row sm:items-center sm:justify-between">
						<h3 class="font-medium">{edu.degree}</h3>
						<span class="text-muted-foreground text-sm">{edu.period}</span>
					</div>
					<p class="text-muted-foreground text-sm">
						{edu.institution}
						{edu.gpa && ` Â· GPA: ${edu.gpa}`}
					</p>
					{edu.coursework && edu.coursework.length > 0 && (
						<div class="mt-2">
							<p class="text-muted-foreground text-sm font-medium">Relevant Coursework:</p>
							<p class="text-muted-foreground text-sm">{edu.coursework.join(", ")}</p>
						</div>
					)}
				</div>
			))
		}
	</div>
</Section>

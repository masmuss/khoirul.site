---
interface Props {
	activeTab?: "posts" | "notes" | "reflective";
}

const { activeTab = "posts" } = Astro.props;

const tabs = [
	{ id: "posts", label: "Posts", href: "/blog" },
	{ id: "notes", label: "Notes", href: "/blog/notes" },
	{ id: "reflective", label: "Reflective", href: "/blog/reflective" },
];
---

<nav class="mb-6 flex items-center gap-4">
	{
		tabs.map((tab) => (
			<a
				href={tab.href}
				class:list={[
					"font-serif text-xl font-semibold transition-colors",
					activeTab === tab.id
						? "text-foreground font-semibold"
						: "text-muted-foreground/80 hover:text-foreground",
				]}
			>
				{tab.label}
			</a>
		))
	}
</nav>

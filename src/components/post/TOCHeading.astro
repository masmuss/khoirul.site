---
import type { TocItem } from "@/lib/utils";

interface Props {
	heading: TocItem;
}

const {
	heading: { depth, slug, subheadings, text },
} = Astro.props;
---

<li class={`${depth > 2 ? "ms-3" : ""}`}>
	<a
		aria-label={`Scroll to section: ${text}`}
		class={`toc-link block line-clamp-2  ${depth <= 2 ? "mt-2" : "mt-1 text-sm"} text-foreground/40 transition-all hover:text-foreground`}
		href={`#${slug}`}>{text}</a
	>
	{
		!!subheadings.length && (
			<ul>
				{subheadings.map((subheading) => (
					<Astro.self heading={subheading} />
				))}
			</ul>
		)
	}
</li>

<style>
.toc-link.active {
	color: var(--color-foreground);
}
</style>

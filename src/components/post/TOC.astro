---
import type { MarkdownHeading } from "astro";
import { generateToc } from "@/lib/utils";

import TOCHeading from "./TOCHeading.astro";

interface Props {
	headings: MarkdownHeading[];
}

const { headings } = Astro.props;

const toc = generateToc(headings);
---

<aside class="sticky top-20 order-2 hidden max-w-xs lg:flex lg:flex-col">
	<h2 class="text-card-foreground font-serif text-lg font-semibold">On this page</h2>
	<ul class="text-card-foreground mt-4 flex flex-col text-pretty">
		{toc.map((heading) => <TOCHeading heading={heading} />)}
	</ul>
</aside>
